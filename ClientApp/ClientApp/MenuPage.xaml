<Page x:Class="ClientApp.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <StackPanel Background="White">
        <TextBlock Margin="20,20,20,20" FontSize="18" FontWeight="Bold">DE-Store management system</TextBlock>
        <Button Margin="20,20,20,20" Width="200" HorizontalAlignment="Left" FontSize="18px" x:Name="btnPriceControl" Content="Price Control" Click="btnPriceControl_Click"/>
        <Button Margin="20,20,20,20" Width="200" HorizontalAlignment="Left" FontSize="18px" x:Name="btnInventoryControl" Content="Inventory Control" Click="btnInventoryControl_Click"/>
        <Button Margin="20,20,20,20" Width="200" HorizontalAlignment="Left" FontSize="18px" x:Name="btnOffers" Content="Offers" Click="btnOffers_Click" />
        <Button Margin="20,20,20,20" Width="200" HorizontalAlignment="Left" FontSize="18px" x:Name="btnFinanceApproval" Content="Financial Approval" Click="btnFinanceApproval_Click" />
        <Button Margin="20,20,20,20" Width="200" HorizontalAlignment="Left" FontSize="18px" x:Name="btnReports" Content="Reports" Click="btnReports_Click" />

    </StackPanel>
</Page>
